{
  "extends": [
    "tslint:latest",
    "tslint-react"
  ],
  "rules": {
    "no-empty-interface": true,
    "no-reference": true,
    "curly": true,
    "await-promise": true,
    "no-empty": true,
    "no-floating-promises": true,
    "no-invalid-this": true,
    "no-null-keyword": false,
    "no-var-keyword": true,
    "triple-equals": true,
    "max-classes-per-file": [
      true,
      1
    ],
    "max-file-line-count": [
      true,
      200
    ],
    "no-default-export": true,
    "no-duplicate-imports": true,
    "prefer-const": true,
    "trailing-comma": [
      true,
      {
        "multiline": {
          "functions": "never"
        },
        "singleline": "never"
      }
    ],
    "semicolon": false,
    "class-name": true,
    "interface-name": [
      true,
      "never-prefix"
    ],
    "space-within-parens": false,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "no-unused-expression": false
  }
}
